@page
@model Voogle.Pages.HomeModel
@{
}
<style type="text/css">
    body {
        margin: 0px;
        width: 100%;
        height: 100%;
        color: white;
        background-color: #9be0d0
    }

</style>


<head>
    <title>VOOGLE - HOME</title>
</head>

<body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].UploadDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].Publisher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].AvgRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video[0].Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Video)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UploadDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvgRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.VideoID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.VideoID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.VideoID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
<footer></footer>
