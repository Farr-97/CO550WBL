@page
@model Voogle.Pages.Videos.Crud.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        margin: 0px;
        width: 100%;
        height: 100%;
        color: white;
        background-color: #9be0d0
    }
</style>

<h1>Create</h1>

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Video.Title" class="control-label"></label>
                <input asp-for="Video.Title" class="form-control" />
                <span asp-validation-for="Video.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.UploadDate" class="control-label"></label>
                <input asp-for="Video.UploadDate" class="form-control" />
                <span asp-validation-for="Video.UploadDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.Publisher" class="control-label"></label>
                <input asp-for="Video.Publisher" class="form-control" />
                <span asp-validation-for="Video.Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.AvgRating" class="control-label"></label>
                <input asp-for="Video.AvgRating" class="form-control" />
                <span asp-validation-for="Video.AvgRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.Duration" class="control-label"></label>
                <input asp-for="Video.Duration" class="form-control" />
                <span asp-validation-for="Video.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.Description" class="control-label"></label>
                <input asp-for="Video.Description" class="form-control" />
                <span asp-validation-for="Video.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
