@page
@model Voogle.Pages.Videos.Crud.CreateModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        margin: 0px;
        width: 100%;
        height: 100%;
        color: white;
        background-color: #9be0d0
    }

    h1 {
        color: #ee2831;
        text-shadow: -1px -1px 0 white, 1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white;
        text-align: center;
        font-size: 40px;
        padding: 1%;
        text-transform: full-width uppercase;
        position: relative;
        font-size: 30px;
        z-index: 1;
        overflow: hidden;
        text-align: center;
    }

        h1:before, h1:after {
            position: absolute;
            top: 51%;
            overflow: hidden;
            width: 50%;
            height: 2px;
            content: '\a0';
            background-color: white;
        }

        h1:before {
            margin-left: -50%;
            text-align: right;
        }

    .upload-form {
        display: grid;
        grid-template-columns: repeat(2,1fr);
    }

    .form-group {
        text-shadow: -1px -1px 0 white, 1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white;
        color: #ee2831;
        padding: 5px;
        font-weight: bold;

    }
    .input-field {
        border: 1px solid #ee2831;
        box-shadow: -1px -1px 0 white, 1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white;
    }

    .button-div {
        grid-row: 5;
        margin: 10px 0px 40px;
        grid-column:1/3;
    }
    .request-field{
        grid-row: 4;
    }
    .submit-button {
        color: #fff !important;
        text-transform: uppercase;
        text-decoration: none;
        background: #ed3330;
        padding: 5px 15px;
        border-radius: 5px;
        display: inline-block;
        border: none;
        transition: all 0.1s ease 0s;
        grid-column: 4;
    }
        .submit-button:hover {
            background: #434343;
            letter-spacing: 1px;
            -webkit-box-shadow: 0px 5px 20px -10px rgba(0,0,0,0.57);
            -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
            box-shadow: 5px 40px -10px rgba(0,0,0,0.57);
            transition: all 0.1s ease 0s;
        }
        .description{
            grid-column: 1/3;
            grid-row:3;
        }

        .description-mlt{
            height: 100px;
        }

</style>


<h1><strong>Upload New Video</strong></h1>


<div >
    <form method="post" class="upload-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Video.VideoURL" class="control-label"></label>
            <input asp-for="Video.VideoURL" class="form-control input-field" />
            <span asp-validation-for="Video.VideoURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Video.Title" class="control-label"></label>
            <input asp-for="Video.Title" class="form-control input-field" />
            <span asp-validation-for="Video.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Video.UploadDate" class="control-label"></label>
            <input type="date" asp-for="Video.UploadDate" class="form-control input-field" />
            <span asp-validation-for="Video.UploadDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Video.Publisher" class="control-label"></label>
            <input asp-for="Video.Publisher" class="form-control input-field" />
            <span asp-validation-for="Video.Publisher" class="text-danger"></span>
        </div>
        <div class="form-group description">
            <label asp-for="Video.Description" class="control-label"></label>
            <textarea asp-for="Video.Description" class="form-control input-field description-mlt" rows="4"></textarea>
            <span asp-validation-for="Video.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Video.RequestID" class="control-label"></label>
            <select asp-for="Video.RequestID" class="form-control  input-field" asp-items="ViewBag.RequestID"></select>
        </div>
        <div class="form-group button-div">
            <input type="submit" value="Create" class="submit-button" />
        </div>
    </form>
    </div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
