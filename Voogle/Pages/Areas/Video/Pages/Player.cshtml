<style type="text/css">
    html {
        overflow-y: scroll;
    }

    body {
        margin: 0px;
        width: 100%;
        height: 100%;
        color: white;
        background-color: #9be0d0;
        font-family: 'Palatino Linotype', Georgia;
        position: absolute;
    }

    .video-details {
        margin: 10px 0px 15px 0px;
        background: #9be0d0;
    }


    .video-and-comments {
        padding: 10px;
        margin: 10px 0px 10px 0px;
        background: white;
        height: 100vh;
    }

    .video-info-table {
        background: #9be0d0;
        color: black;
        width: 100%;
        border: 1px solid #9be0d0;
    }

    .video-info-table tr, td{
        width:50%;
        border: 0px;
    }
    

    .comment-table {
        border-collapse: collapse;
        background: grey;
    }

    .comment-table, td, th {
        border: 1px solid white;
        vertical-align: top;
        padding: 2%;
    }

    .normal-tr {
        height: auto;
        font-size: 12px;
    }

    .header-tr {
        height: 20px;
        font-size: 14px;
    }

    .float-child-L {
        float: left;
        height: 100%;
        width: 70%;
        padding: 10px;
    }

    .float-child-R {
        float: left;
        height: 100%;
        width: 30%;
        padding: 10px;
    }

    * {
        box-sizing: border-box;
    }

    .column-rv {
        float: left;
        width: 30%;
        margin: 5px;
        border-style: solid;
        border-color: white;
        border-width: 2px;
    }

    /* Clearfix (clear floats) */
    .row-rv::after {
        content: "";
        clear: both;
        display: table;
    }


    .float-grid {
        display: grid;
        grid-template-columns: 70% 30%;
        grid-auto-rows:minmax(100px, auto);
        align-content:center;
    }

    .float-left {
        float: left;
        display: inherit;
        grid-column: 1;
    }

    .float-left-top{
        grid-row: 1;
        padding:10px;
    }

    .float-left-bottom{
        grid-row: 2;
    }

    .float-right{
        float:right;
        display: inherit;
        grid-column: 2;
    }

    .float-right-top {
        grid-row: 1;
    }

    .float-right-bottom {
        grid-row: 2;
    }

    .float-quarter {
        text-align: center;
        background: #ee2831;
        margin: 2px;
        border: 1px solid #9be0d0;
    }
    .stars {
        --s: 25px;
        width: calc(var(--n,5)*var(--s));
        height: calc(var(--s)*0.9);
        --v1: transparent,#000 0.5deg 108deg,#0000 109deg;
        --v2: transparent,#000 0.5deg 36deg,#0000 37deg;
        -webkit-mask: conic-gradient(from 54deg at calc(var(--s)*0.68) calc(var(--s)*0.57),var(--v1)), conic-gradient(from 90deg at calc(var(--s)*0.02) calc(var(--s)*0.35),var(--v2)), conic-gradient(from 126deg at calc(var(--s)*0.5) calc(var(--s)*0.7),var(--v1)), conic-gradient(from 162deg at calc(var(--s)*0.5) 0,var(--v2));
        -webkit-mask-size: var(--s) var(--s);
        -webkit-mask-composite: xor,destination-over;
        mask-composite: exclude,add;
        background: linear-gradient(gold 0 0) 0/calc(var(--l,0)*var(--s)) no-repeat #ccc;
        display: inline-flex;
    }

    .details {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        padding: 10px;
    }

    .details-left{
        text-align:left;
        grid-column:1/3;
        grid-row:1;
    }
    .details-right{
        text-align:right;
        grid-column: 3;
        grid-row: 1;
    }
    .details-description{
        text-align:left;
        grid-column: 1/4;
        grid-row: 2;
    }
</style>


