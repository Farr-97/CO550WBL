<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Voogle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .headbar1 {
            background-color: #ee2831;
            text-align:center;
            font-weight:bold
        }
        a.siteTitle {
            font-family:'Palatino Linotype', Georgia;
            font-size: 45px;
            color:white
        }
        .sitePages {
            text-align: center;
            color: white
        }
        .sitePages > li {
            display: inline-block;
            float: none;
            color: inherit;
            text-decoration: none;
            margin: 10px;
            padding: 0px 5px 0px 5px;
            border-radius: 5px
        }
        .sitePages > li a {
            color: white
        }
    </style>
</head>
<body>
    <header>
        <nav class="headbar1">
            <div>
                <a class="siteTitle" asp-area="" asp-page="/Index">Voogle</a>
                <br />
                <div>
                    <ul class="sitePages">
                        <li>
                            <a asp-area="" asp-page="/CustomPages/Home">Home</a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/CustomPages/Search">Search</a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/CustomPages/Videos">Videos</a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/CustomPages/Request">Requests</a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/CustomPages/Upload">Upload</a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/CustomPages/Help">Help</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2021 - Voogle - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
